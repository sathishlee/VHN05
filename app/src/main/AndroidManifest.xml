            android:theme="@style/AppTheme"/>
        <activity android:name=".PNMotherDetailsActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".PNMotherVisitListActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".PNMotherVisitListDetailsActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".ImmunizationDoseListActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".ImmunizationVisit"
