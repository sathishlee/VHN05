<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.priyan.vhn.MothersDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mother's Information"
            android:layout_gravity="center_horizontal"
            android:textSize="21sp"
            android:textStyle="bold"
            android:textColor="#060606"
            android:padding="10dp"
            android:visibility="gone"
           />
        <include layout="@layout/card_mother_profile"/>
        <include layout="@layout/card_verify_otp"
            android:visibility="gone"/>
        <include layout="@layout/card_vhn_profile"
            android:visibility="gone"/>

        <include layout="@layout/card_present_status"/>
        <include layout="@layout/card_emergency_call"/>
        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8.0dip"
            android:orientation="vertical"
            android:padding="16.0dip"
            app:cardBackgroundColor="@android:color/white"
            app:cardElevation="2.0dip">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="4.0dip"
                        android:paddingLeft="8.0dip"
                        android:paddingRight="8.0dip"
                        android:paddingTop="4.0dip"
                        android:text="@string/name_of_the_person"
                        android:textColor="@color/text_primary"
                        android:textSize="16.0sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start|center"
                        android:paddingBottom="2.0dip"
                        android:paddingLeft="8.0dip"
                        android:paddingRight="8.0dip"
                        android:paddingTop="2.0dip"
                        android:text="Husband"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="4.0dip"
                        android:paddingLeft="8.0dip"
                        android:paddingRight="8.0dip"
                        android:paddingTop="4.0dip"
                        android:text="+91 9876543210"
                        android:textColor="@color/text_primary"
                        android:textSize="14.0sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_call_a"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:padding="20.0dip"
                    app:srcCompat="@drawable/vector_drawable_phone" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/rel_bottom"
            android:weightSum="2"
            android:padding="5dp"
            android:layout_alignParentBottom="true">

        <Button

            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:id="@+id/btn_view_location"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:text="View Location"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_show_location"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:id="@+id/btn_view_report"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:text="View Report"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_view_report"/>

    </LinearLayout>
        <FrameLayout
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:animateLayoutChanges="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:visibility="gone">

        </FrameLayout>

    </LinearLayout>
</ScrollView>
