<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="60dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_no_internet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You are in offline"
                android:background="@color/red"
                android:textColor="@color/white"
                android:textSize="@dimen/text_label"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="visible"/>
            <android.support.v7.widget.SearchView
                android:id="@+id/search_mother"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"/>
            <View
                android:layout_gravity="center"
                android:background="@drawable/header_line"
                android:layout_width="match_parent"
                android:layout_height="5.0dp"
                android:layout_weight="1.0"
                android:layerType="software" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <android.support.v7.widget.SearchView
                        android:id="@+id/search_mother_not_use"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"/>




                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_margin="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mother's LIST"
                                android:textSize="@dimen/text_label"
                                android:textAlignment="textStart"
                                android:textColor="@color/startblue"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/ll_filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/filter_background">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_margin="4dp"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginEnd="5dp"
                                        android:drawableStart="@drawable/filter"
                                        android:layout_gravity="end"
                                        android:textSize="@dimen/text_secondary"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/txt_risk"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginEnd="5dp"
                                        android:text="Filter"
                                        android:textSize="@dimen/text_secondary"
                                        android:layout_gravity="end"
                                        android:textColor="@color/startblue"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:paddingTop="4.0dip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_gravity="center"
                            android:background="@drawable/header_line"
                            android:layout_width="match_parent"
                            android:layout_height="5.0dp"
                            android:layout_weight="1.0"
                            android:layerType="software" />

                    </LinearLayout>

                </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="60dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/mother_recycler_view"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <TextView
                android:id="@+id/txt_no_records_found"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="NO RECORDES FOUND" />

                <include layout="@layout/item_mothers_an"
                    android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>