<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/doctor_background">

    <android.support.v7.widget.CardView
        android:id="@+id/user_profile_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        app:cardCornerRadius="5dp"
        android:backgroundTint="#c8ffffff"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="false" >

        <RelativeLayout
            android:id="@+id/ll_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardview_image"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="40dp">

            <LinearLayout
                android:id="@+id/ll_hsc_phc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hsc"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_primary"
                        android:textColor="@color/text_header"/>
                    <TextView
                        android:id="@+id/txt_hsc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medavakkam"
                        android:gravity="start"
                        android:padding="1dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_secondary"
                        android:textColor="#333333"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/phc"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_primary"
                        android:textColor="@color/text_header" />
                    <TextView
                        android:id="@+id/txt_phc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ankaputhur"
                        android:gravity="start"
                        android:padding="1dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_secondary"
                        android:textColor="#333333"/>

            </LinearLayout>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_below="@+id/ll_hsc_phc"
                android:padding="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/block_home"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_primary"
                        android:textColor="@color/text_header"/>
                    <TextView
                        android:id="@+id/txt_block"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pallavaram"
                        android:gravity="start"
                        android:padding="1dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_secondary"
                        android:textColor="#333333"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/address_home"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_primary"
                        android:textColor="@color/text_header" />

                    <TextView
                        android:id="@+id/txt_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:padding="1dp"
                        android:text="No.17, south usman road, T Nagar, CH-17"
                        android:textColor="#333333"
                        android:textSize="@dimen/text_secondary" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/ll_vhn_name"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/profile_name"
        android:elevation="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="80dp"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/txt_vhn_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textAllCaps="true"
            android:padding="1dp"
            android:gravity="start"
            android:textSize="@dimen/text_label"
            android:textColor="#333333"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/userImageProfile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        app:srcCompat="@drawable/ic_nurse"
        android:background="@drawable/profile_circular_border_imageview"
        android:elevation="5dp"
        />
<!--  app:srcCompat="@drawable/ic_nurse"
        android:background="@drawable/profile_circular_border_imageview"
        android:elevation="5dp"
        tools:ignore="VectorDrawableCompat"-->

</RelativeLayout>