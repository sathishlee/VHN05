<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="20"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="15">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start">

                <ImageView
                    android:id="@+id/profilePic"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/girl"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_horizontal" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_margin="4dp"
                    android:elevation="10dp"
                    android:background="@drawable/icon_back_prblm" >

                    <ImageView
                        android:id="@+id/iv_camera"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="top|end"
                        android:background="@drawable/ic_risk"/>

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_title"
                android:text="Tamil Selvi"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textColor="@color/notification_second"
                android:textSize="@dimen/text_label"
                android:text="Needs your Help"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textColor="@color/notification_time"
                android:textSize="@dimen/text_secondary"
                android:text="1 hour age"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_gravity="center"
        android:background="@drawable/noti_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="5.0dp"
        android:layout_weight="1.0"
        android:layerType="software" />

</LinearLayout>
