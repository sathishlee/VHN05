<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mlayout4">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IMMUNIZATION DUE LIST THIS WEEK"
        android:textSize="@dimen/text_content_list"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_margin="15dp"/>
    <TableLayout
        android:id="@+id/imm_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/list_item_color">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zero Dose"
                android:layout_below="@+id/txt_title"
                android:textSize="@dimen/text_content_list"
                android:padding="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_below="@+id/txt_title"
                android:textSize="@dimen/text_primary"
                android:padding="10dp"
                android:layout_marginLeft="50dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1st Dose"
                android:layout_below="@+id/txt_title"
                android:textSize="@dimen/text_content_list"
                android:padding="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="50"
                android:layout_below="@+id/txt_title"
                android:textSize="@dimen/text_primary"
                android:padding="10dp"
                android:layout_marginLeft="50dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/list_item_color">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2nd Dose"
                android:layout_below="@+id/txt_title"
                android:textSize="@dimen/text_content_list"
                android:padding="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="25"
                android:layout_below="@+id/txt_title"
                android:textSize="@dimen/text_primary"
                android:padding="10dp"
                android:layout_marginLeft="50dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3rd Dose"
                android:layout_below="@+id/txt_title"
                android:textSize="@dimen/text_content_list"
                android:padding="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="30"
                android:layout_below="@+id/txt_title"
                android:textSize="@dimen/text_primary"
                android:padding="10dp"
                android:layout_marginLeft="50dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/list_item_color">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MR/JE"
                android:layout_below="@+id/txt_title"
                android:textSize="@dimen/text_content_list"
                android:padding="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10"
                android:layout_below="@+id/txt_title"
                android:textSize="@dimen/text_primary"
                android:padding="10dp"
                android:layout_marginLeft="50dp" />
        </TableRow>
    </TableLayout>
</LinearLayout>